<view name="technologiesParameters" modelPlugin="basic" modelName="parameter"
      defaultAuthorizationRole="ROLE_PARAMETERS"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://schema.qcadoo.org/view"
      xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd">

    <component type="window" name="window">

        <ribbon>
            <group name="actions" hasLabel="false">
                <bigButton name="save" icon="saveIcon24.png" action="#{form}.performSave;"/>
            </group>
        </ribbon>

        <windowTab name="main" reference="main">
            <component type="form" name="technologiesGeneratorParameters" reference="form">
                <component type="gridLayout" name="generatorTabGridLayout"  columns="3" rows="5">
                    <layoutElement column="1" row="1">
                        <component type="checkbox" name="completeWarehousesFlowWhileChecking" field="#{form}.completeWarehousesFlowWhileChecking"
                                   reference="completeWarehousesFlowWhileChecking" hasDescription="true">
                            <option type="labelWidth" value="60"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="2">
                        <component type="checkbox" name="moveProductsToSubsequentOperations" field="#{form}.moveProductsToSubsequentOperations"
                                   reference="moveProductsToSubsequentOperations" hasDescription="true">
                            <option type="labelWidth" value="60"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="3">
                        <component type="checkbox" name="technologiesGeneratorCopyProductSize" field="#{form}.technologiesGeneratorCopyProductSize"
                                   reference="technologiesGeneratorCopyProductSize">
                            <option type="labelWidth" value="60"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="4">
                        <component type="checkbox" name="allowCheckedTechnologyWithoutInProducts" field="#{form}.allowCheckedTechnologyWithoutInProducts"
                                   reference="allowCheckedTechnologyWithoutInProducts">
                            <option type="labelWidth" value="60"/>
                        </component>
                    </layoutElement>
                    <layoutElement column="1" row="5">
                        <component type="checkbox" name="acceptedTechnologyMarkedAsDefault" field="#{form}.acceptedTechnologyMarkedAsDefault"
                                   reference="acceptedTechnologyMarkedAsDefault" hasDescription="true">
                            <option type="labelWidth" value="60"/>
                        </component>
                    </layoutElement>
                </component>

                <option type="header" value="true"/>
                <option type="expression" value=""/>
            </component>
        </windowTab>
    </component>

</view>
