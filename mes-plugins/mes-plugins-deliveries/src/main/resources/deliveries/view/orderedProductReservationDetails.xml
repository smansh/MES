<view defaultAuthorizationRole="ROLE_REQUIREMENTS" name="orderedProductReservationDetails" modelName="orderedProductReservation"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/view"
      xsi:schemaLocation="http://schema.qcadoo.org/view http://schema.qcadoo.org/view.xsd"
      windowWidth="800" windowHeight="500">

    <component type="window" name="window">
        <ribbon>
            <template name="standardFormTemplate" excludeItems="actions.copy, actions.delete, actions.refresh" />
        </ribbon>

        <windowTab name="mainTab">
            <component type="form" name="orderedProductReservationDetails" reference="form">
                <component type="gridLayout" name="gridLayout" columns="3" rows="4" hasBorders="false">
                    <layoutElement column="1" row="1" width="2">
                        <component type="lookup" name="location" reference="location" field="location">
                            <option type="column" name="name" fields="name" link="true" />

                            <option type="searchable" value="name,number" />
                            <option type="orderable" value="name,number" />

                            <option type="expression" value="'&lt;b&gt;' + #number + '&lt;/b&gt; - ' + #name" />
                            <option type="fieldCode" value="number" />
                        </component>
                    </layoutElement>   
                    
                    <layoutElement column="1" row="2" width="3">                        
                        <component type="gridLayout" name="gridLayoutOrderedQuantity" columns="3" rows="1" hasBorders="false">
                            <layoutElement column="1" row="1" width="2">
                                <component type="input" name="orderedQuantity" reference="orderedQuantity" field="orderedQuantity">
                                    <option type="alignment" value="right"/>
                                    <listener event="onInputChange" method="quantityChange"
                                              class="com.qcadoo.mes.deliveries.listeners.OrderedProductReservationDetailsListeners" />
                                </component>
                            </layoutElement>
                            <layoutElement column="3" row="1" width="1">
                                <component type="input" name="orderedQuantityUnit" defaultEnabled="never" hasLabel="false" reference="orderedQuantityUnit">
                                    <option type="textRepresentationOnDisabled" value="true" />
                                </component>                        
                            </layoutElement>
                        </component>   
                    </layoutElement>  
                    
                    <layoutElement column="1" row="3" width="3">                              
                        <component type="gridLayout" name="gridLayoutAdditionalQuantity" columns="3" rows="1" hasBorders="false">                                         
                            <layoutElement column="1" row="1" width="2">
                                <component type="input" name="additionalQuantity" reference="additionalQuantity" field="additionalQuantity">
                                    <option type="alignment" value="right"/>
                                    <listener event="onInputChange" method="additionalQuantityChange"
                                              class="com.qcadoo.mes.deliveries.listeners.OrderedProductReservationDetailsListeners" />
                                </component>
                            </layoutElement>
                        
                            <layoutElement column="3" row="1" width="1">
                                <component type="input" name="additionalQuantityUnit" defaultEnabled="never" hasLabel="false" reference="additionalQuantityUnit">
                                    <option type="textRepresentationOnDisabled" value="true" />
                                </component>                        
                            </layoutElement> 
                        </component>
                    </layoutElement>     
                    
                </component>
				
                <option type="header" value="true" />
                <option type="expression" value="#name" />
            </component>
        </windowTab>
    </component>

    <hooks>
        <beforeRender
            class="com.qcadoo.mes.deliveries.hooks.OrderedProductReservationDetailsHooks" method="onBeforeRender" />
    </hooks>
</view>